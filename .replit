# Deploy configuration for Burnt Beats Application

# Entry point for the application
entrypoint = "main.py"

# Command to start the Node.js app
externalPortCommand = "nvm start"
modules = ["nodejs-20", "postgresql-16", "python-3.11"]

# Local port configuration
localPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[nix]
channel = "stable-24_05"
packages = ["alsa-lib", "fluidsynth", "glibcLocales", "libjack2", "libxcrypt", "pkg-config", "portmidi", "run", "xsimd"]

[workflows]
runButton = "Start Full System"

[[workflows.workflow]]
name = "Development Server"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "packager.installForLanguage"
args = "nodejs"

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Production Server"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node run-production.js"

[[workflows.workflow]]
name = "Production Build"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node deploy-production-fix.cjs"

[[workflows.workflow]]
name = "Database Migration"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run db:migrate"

[[workflows.workflow]]
name = "Quick Preview"
author = 41134091
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run build && npm start"

[[workflows.workflow]]
name = "Simple Development Server"
