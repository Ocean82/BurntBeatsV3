{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "../dist/server",
    "rootDir": "..",
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "..",
    "types": [
      "node"
    ],
    "lib": [
      "ES2020"
    ],
    "paths": {
      "shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "**/*",
    "../shared/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}