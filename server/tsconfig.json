
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "../",
    "paths": {
      "shared/*": ["shared/*"]
    },
    "types": ["node", "ws"],
    "typeRoots": ["./types", "../node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../client/**/*",
    "../test/**/*",
    "../tests/**/*"
  ]
}
