# Database Configuration (Required)
DATABASE_URL=postgresql://user:password@host:port/database

# Stripe Configuration (Required for payments)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Node Environment
NODE_ENV=production
PORT=5000

# Optional AI Services
OPENAI_API_KEY=sk-...
ELEVENLABS_API_KEY=...

# Optional Audio Processing
AI_MODEL_PATH=/app/models
TACOTRON2_API_URL=http://localhost:8080
RVC_MODEL_PATH=./Retrieval-based-Voice-Conversion-WebUI
DIFFUSION_MODEL_URL=http://localhost:8081
ESPEAK_NG_PATH=/usr/bin/espeak-ng
CMUDICT_PATH=/usr/share/dict/cmudict

# AudioLDM2 Configuration
AUDIOLDM2_MODEL_PATH=cvssp/audioldm2
AUDIOLDM2_PYTHON_PATH=python3
AUDIOLDM2_MAX_AUDIO_LENGTH=30.0

# Webhook Configuration
STRIPE_WEBHOOK_ENDPOINT=https://your-app.replit.app/webhook/stripe

# Google Cloud Storage (Required for file storage)
# Use individual environment variables instead of JSON file for security
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PRIVATE_KEY=your-private-key-content-here
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@your-project-id.iam.gserviceaccount.com
GOOGLE_CLOUD_BUCKET=your-bucket-name

# Storage Configuration
MODEL_CACHE_PATH=/tmp/models
STORAGE_BASE_PATH=./storage
MAX_FILE_SIZE=52428800
TEMP_CLEANUP_INTERVAL=3600000
